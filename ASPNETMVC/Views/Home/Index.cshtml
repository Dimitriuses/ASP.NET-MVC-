@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Авто Салон</title>
</head>
<body>
    <div>
        <h3>Распродажа авто</h3>
        <table>
            <tr class="header">
                <td><p>Название Авто</p></td>
                <td><p>Виробник</p></td>
                <td><p>Цена</p></td>
                <td></td>
            </tr>
            @foreach (var b in ViewBag.Cars)
            {
                <tr>
                    <td><p>@b.Name</p></td>
                    <td><p>@b.Producer</p></td>
                    <td><p>@b.Price</p></td>
                    <td><p><a href="/Home/Buy/@b.Id">Купить</a></p></td>
                </tr>
            }
        </table>
    </div>
</body>
</html>